var strDescripcion = "Programa que busca el numero mayor y menor"

print( strDescripcion)

var A = 10
var B = 20
var C = 30

var min = 0
var max = 0

// establecer cual es la mayor de los 3 números utilizando operadores relacionales o de comparación y el operador booleano "And" &&

if A > B && A > C {
        max = A
        print ("A es mayor = " , max)
    }
    else if B > A && B > C {
        max = B
        print ("B es mayor = " , max)

    }
    else if C > A && C > B{
        max = C
        print ("c es mayor = " , max)
    }

// una vez se establezca el mayor se comparan los dos números restante para conocer cual es menor

if B > A{
        min = A
        print ("A es mmenor = " , min)
}

else {
    min = B
    print ("B es menor = " , min)
}

print("\n") // escape caracter o enter

/* Crear un Array (lista) con los 3 números para evaluar que numero es mayor y cual menor*/
 
var listaNum = [A, B, C ]. // declaración del arrays
listaNum.max()  // usando la función max() y mix()
listaNum.min()
print (max, min) // imprimir el max y min respectivamente
